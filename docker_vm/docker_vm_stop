#!/usr/bin/env bash

set -eu

help()
{
    echo "Stop vpnkit and minikube"
}

while getopts ":h" option; do
    case $option in
        h)
            help
            exit;;
    esac
done

echo "âš™ï¸   Stopping vpnkit..."
for pid in $(ps -ax | grep "[/]vpnkit" | cut -d " " -f 1); do kill -9 $pid; done
echo "âš™ï¸   Stopping minikube..."
minikube stop
echo "ğŸ––  Done."

exit 0
